{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",        # Match all PHP files in the api folder
      "use": "@vercel/php"          # Vercel's native PHP support
    },
    {
      "src": "package.json",        # The Node.js part (React, frontend)
      "use": "@vercel/node"         # Use Vercel's Node.js builder
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.php"         # Route API calls to PHP files
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"          # Serve static assets (CSS, images) from the public folder
    }
  ]
}

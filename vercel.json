{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",        
      "use": "@vercel/php"            
    },
    {
      "src": "package.json",          
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.php"         
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"           
    }
  ]
}
